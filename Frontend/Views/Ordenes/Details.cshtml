@model Frontend.Models.OrdenViewModel

<div>
    <h2>Orden # @Html.DisplayFor(model => model.Id)</h2>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DireccionCompleta)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DireccionCompleta)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaCreacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaCreacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaEntrega)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaEntrega)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PrecioTotal)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PrecioTotal)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
    </dl>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Producto</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.LineasOrden)
            {
            <tr>
                <th>@item.Id</th>
                <th>@item.Producto</th>
                <th>@item.Cantidad</th>
                <th>@item.Precio</th>
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index">Regresar</a>
</div>
