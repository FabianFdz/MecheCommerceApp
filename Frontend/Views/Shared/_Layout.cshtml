        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3" style=" background-color: #558B29">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/img/iconos/2998126_basket_food_fruit_garden_harvest_icon.png" alt=""  width="30" height="24" class="d-inline-block align-text-top">
                MecheFruits</a>
